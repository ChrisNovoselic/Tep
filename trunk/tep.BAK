FUNCTION entr  && вызов из TABLE1.SCX
PRIVATE x
x=varread()
IF "    -     "$&x
   minus=.T.
ENDIF
*****************************************************************************
FUNCTION exit  && вызов из TABLE1.SCX
PARAM table
IF PARAM()=0
   PRIVATE table
   table="table1"
ENDIF
PRIVATE x,form,i
form='FORM'+FormNum
i=&table..&form..grid1.ActiveColumn
x=&table..&form..grid1.columns(i).controlsource
IF minus=.T.
   minus=.F.
   IF NOT LEFT(&x,1)='s'
   REPLACE &x WITH "    -     "
   ENDIF
ENDIF
