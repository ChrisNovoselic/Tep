        BL1=.F.
        BL3=.F.
        BL2=.F.
        BL4=.F.
        BL5=.F.
        BL6=.F.
        KTSpath='W:\KTC'
        RealTime=.F.
        resolut=resolutWidthDefault 
ENDCASE

