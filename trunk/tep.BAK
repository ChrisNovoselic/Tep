        BL2=IIF(BL='/2',.T.,.F.)
        BL3=IIF(BL='/3',.T.,.F.)
        BL4=IIF(BL='/4',.T.,.F.)
        BL5=IIF(BL='/5',.T.,.F.)
        BL6=IIF(BL='/6',.T.,.F.)
